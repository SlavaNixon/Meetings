<% unless flash[:error].nil? %>
  <div class="alert alert-danger alert-dismissible fade show my-2" role="alert">
    <p><%= flash[:error] %></p>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
