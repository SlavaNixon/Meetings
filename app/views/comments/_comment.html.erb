<div class="buffer-bottom mt-2 form-control">
  <p class="mb-1"><%= comment.body %></p>
  <p class="mb-1">
    <span>
      <% if comment.user.present? %>
        <span class="mb-1">
          <%= render "users/user", user: comment.user %>
        </span>
      <% else %>
        <em><strong><%= comment.user_name %></strong></em>
      <% end %>
    </span>
    <em><%= l comment.created_at, format: :short %></em>
    <% if user_can_delete?(comment.meeting.user, comment.user) %>
      <%= button_to t("my.comments.delete_button"), meeting_comment_path(@meeting, comment), method: :delete, class: "btn btn-danger", method: :delete, form: { data: { 'turbo-confirm': t("my.comments.delete_confirm") } }%>
    <% end %>
  </p>
</div>
