<h1><%= t("my.users.edit.title") %></h1>
<%= form_with model: @user, url: user_path, method: :patch, data: {turbo: false} do |form| %>
  <%= form.text_field :nickname, placeholder: resource.class.human_attribute_name(:nickname), class: "mb-2 form-control w-75" %>
  <%= form.text_field :email, placeholder: resource.class.human_attribute_name(:email), class: "mb-2 form-control w-75" %>

  <%= form.submit t("my.users.edit.submit"), class: "btn btn-primary w-75 mb-3" %>
<% end %>
<%= link_to t("my.users.edit.back"), @user %>
