<h2><%= t('.change_your_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.password_field :password, autofocus: true, placeholder: "#{t('.new_password')} #{t('devise.shared.minimum_password_length', count: @minimum_password_length)}", autocomplete: "new-password", class: "mb-2 form-control w-75" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, placeholder: t('.confirm_new_password'), autocomplete: "new-password", class: "mb-2 form-control w-75" %>
  </div>

  <div class="actions">
    <%= f.submit t('.change_my_password'), class: "btn btn-primary w-75 mb-3" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
