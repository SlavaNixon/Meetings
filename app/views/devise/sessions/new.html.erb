<div class="ml-5">
  <h2>Войти</h2>
  <div class = "form-group">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "mb-2 form-control w-25" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Пароль", class:"form-control w-25" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label "Запомнить меня" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Войти", class: "btn btn-primary w-25" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
