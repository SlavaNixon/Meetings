<div class="ml-5">
  <h2><%= t "my.sessions.new.title" %></h2>
  <div class = "form-group">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t("activerecord.attributes.user.email"), class: "mb-2 form-control w-75" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: t("activerecord.attributes.user.password"), class:"form-control w-75" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label t("my.sessions.new.remember") %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit t("my.sessions.new.title"), class: "btn btn-primary w-75" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
