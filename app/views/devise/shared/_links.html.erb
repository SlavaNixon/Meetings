<%- if controller_name != 'sessions' %>
  <%= link_to t("my.links.join"), new_session_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t("my.links.registration"), new_registration_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t("my.links.forgot_password"), new_password_path(resource_name) %><br />
<% end %>
